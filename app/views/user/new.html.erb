<html lang="fr">
  <head>
    <meta charset="utf-8">
    <title>The Gossip Project</title>
    <!-- On peut avoir d'autres méta-données ici -->
  </head>
  <body>
    <!-- ... -->
  <div class="text-center nt-5">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <!-- Authenticity token sur une ligne -->
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">


      <div class="card" style="width: 18rem;">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">Card title</h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>


      <%= label_tag 'Prénom' %> <br/>
      <%= text_field_tag 'first_name', @user.first_name %>
      <br /> <br />

      <%= label_tag 'Nom' %> <br/>
      <%= text_area_tag 'last_name', @user.last_name %>
      <br /> <br />    
      
      <%= label_tag 'Ton âge' %> <br/>
      <%= text_area_tag 'age', @user.age %>
      <br /> <br />

      <%= label_tag 'Description' %> <br/>
      <%= text_area_tag 'description', @user.description %>
      <br /> <br />

      <%= label_tag 'Email' %> <br/>
      <%= text_area_tag 'email', @user.email %>
      <br /> <br />

      <%= label_tag 'Ton n° de Ville' %> <br/>
      <%= text_area_tag 'city_id', @user.city_id %>
      <br /> <br />

      <%= label_tag 'Mot de passe' %> <br/>
      <%= text_area_tag 'password', @user.password %>
      <br /> <br />



      <%= submit_tag "Create user" %>
      <br/>
      <br/>


      <% if @user.save %>
        <div class="alert alert-success" role="alert">
          <strong>Nice !</strong> Ton user a été créé avec succès !
        </div>
      <% end %>


      <% if flash[:alert]%>
        <div class="alert alert-danger" role="alert">
          <strong>Echec !</strong> Une erreur s'est produite dans la création de ton user !
        </div>
      <% end %>


    <% end %>
  </div>
    <!-- ... -->
  </body>
</html>