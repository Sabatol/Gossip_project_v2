<html lang="fr">
  <head>
    <meta charset="utf-8">
    <title>The Gossip Project</title>
    <!-- On peut avoir d'autres méta-données ici -->
  </head>
  <body>
    <!-- ... -->
  <div class="text-center nt-5">
    <%= form_for @gossip do |gossip| %>
      <!-- Authenticity token sur une ligne -->
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      
      <%= label_tag 'Title' %> <br/>
      <%= gossip.text_field 'title' %>
      <br /> <br />

      <%= label_tag 'Content' %> <br/>
      <%= gossip.text_area 'content' %>
      <br /> <br />

      <%= submit_tag "Modifier un Gossip" %>
      <br/>
      <br/>

      <% if flash[:alert]%>
        <div class="alert alert-danger" role="alert">
          <strong>Echec !</strong> Une erreur s'est produite lors de la modification de ton gossip !
        </div>
      <% end %>


    <% end %>
  </div>
    <!-- ... -->
  </body>
</html>