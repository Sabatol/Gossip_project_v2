<body>
    <!-- ... -->
  <div class="d-flex justify-content-center d-flex align-items-center text-center">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <!-- Authenticity token sur une ligne -->
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">


      <div class="card" style="width: 35rem;">
        <img src="data:image/jpeg;base64," class="card-img-top" alt="...">
        <div class="card-body">
          <br/>
          <h5 class="card-title">Nouveau Potin</h5>
          <br/>
          <p class="card-text text-center py-0 my-0">   
            <%= label_tag 'Titre' %> <br/>
            <%= text_field_tag 'title', @gossip.title %>
          </p>
          <div class="d-flex justify-content-center"><FONT size="2pt">14 max.</FONT></div>
          <br/>
          <br/>
          <p class="card-text text-center py-0 my-0">
            <%= label_tag 'Quoi de neuf ?' %> <br/>
            <%= text_area_tag 'content', @gossip.content %>
          </p>
          <div class="d-flex justify-content-center"><FONT size="2pt">140 max.</FONT></div>
          <br/>

          <%= submit_tag "Envoyer" %>
        </div>
      </div>


      
      <br/>
      <br/>


      <% if @gossip.save %>
        <div class="alert alert-success" role="alert">
          <strong>Nice !</strong> Ton gossip a été créé avec succès !
        </div>
      <% end %>


      <% if flash[:alert]%>
        <div class="alert alert-danger" role="alert">
          <strong>Echec !</strong> Une erreur s'est produite dans la création de ton gossip !
        </div>
      <% end %>


    <% end %>
  </div>
    <!-- ... -->
  </body>
